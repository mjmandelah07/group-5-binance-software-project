    "highest-available-document-mode": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "text-underline-offset",
          "width: fit-content",
          "text-decoration-thickness",
          "scroll-behavior",
          "overflow-clip-margin",
          "height: fit-content",
          "user-select"
        ]
      }
    ],
    "no-inline-styles": "off",
    "axe/forms": [
      "default",
      {
        "select-name": "off"
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off"
      }
    ]
  }
}